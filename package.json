{
  "name": "removal-ninja",
  "version": "1.0.0",
  "description": "Decentralized databroker removal tool with token incentives",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest && cd client && npm test",
    "install:all": "npm install && cd client && npm install",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "security:scan": "socket npm audit && socket npm view --all",
    "security:ci": "socket ci --all"
  },
  "keywords": [
    "databroker",
    "removal",
    "decentralized",
    "blockchain",
    "privacy"
  ],
  "author": "removal.ninja",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@socketsecurity/cli": "^1.1.22",
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
