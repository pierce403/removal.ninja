{
  "name": "removal-ninja",
  "version": "1.0.0",
  "description": "Decentralized databroker removal tool with token incentives",
  "main": "foundry/src/RemovalNinja.sol",
  "scripts": {
    "dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "cd foundry && forge test",
    "test:coverage": "cd foundry && forge coverage",
    "test:gas": "cd foundry && forge test --gas-report",
    "install:all": "npm install && cd client && npm install --legacy-peer-deps && cd ../foundry && forge install",
    "compile": "cd foundry && forge build",
    "deploy": "./deploy_contracts.sh",
    "deploy:base-sepolia": "./deploy_contracts.sh base-sepolia --verify",
    "deploy:localhost": "./deploy_contracts.sh localhost",
    "flatten": "./scripts/flatten.sh",
    "security:scan": "socket npm audit && socket npm view --all",
    "security:ci": "socket ci --all"
  },
  "keywords": [
    "databroker",
    "removal",
    "decentralized",
    "blockchain",
    "privacy",
    "web3",
    "ethereum",
    "foundry"
  ],
  "author": "Pierce",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "@socketsecurity/cli": "^1.1.22"
  }
}
