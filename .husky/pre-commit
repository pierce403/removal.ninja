#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Change to client directory and run lint:ci
cd client
npm run lint:ci

# If linting fails, prevent commit
if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Pre-commit failed! Please fix ESLint errors before committing."
  echo "ğŸ’¡ Run 'cd client && npm run lint:ci' to see detailed errors."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"